---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import scottPhoto from '../assets/scott-photo-1.jpg';

const latestPosts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout title="Scott Armbruster - AI Strategy & Systems Partner" description="AI Strategy & Systems Partner helping professionals build AI-powered income streams and organizations deploy AI systems that deliver real ROI.">
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Scott Armbruster",
      "url": "https://scottarmbruster.com",
      "jobTitle": "AI Strategy & Systems Partner",
      "description": "AI Strategy & Systems Partner helping professionals build AI-powered income streams and organizations deploy AI systems that deliver real ROI.",
      "knowsAbout": ["Artificial Intelligence", "AI Implementation", "Business Automation", "n8n", "AI Strategy"],
      "sameAs": [
        "https://www.linkedin.com/in/scottrarmbruster/",
        "https://youtube.com/@loganday"
      ]
    })} />
  </Fragment>
  <!-- Hero Section -->
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <!-- Left: Text Content -->
        <div>
          <p class="text-blue-400 text-sm font-semibold tracking-wide uppercase mb-4">
            AI Strategy & Systems Partner
          </p>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-white">
            Hi, I'm Scott Armbruster
          </h1>

          <p class="text-xl text-slate-300 mb-6 leading-relaxed">
            I help professionals build AI-powered income streams and organizations deploy AI
            systems that actually work.
          </p>

          <p class="text-base text-slate-400 mb-10 leading-relaxed">
            With 23+ years in technology and 10+ years consulting Fortune 500 companies,
            I've learned what separates AI success from AI hype. Now I'm on a mission
            to bridge the gap between learning and doing.
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/services"
              class="bg-blue-600 hover:bg-blue-700 text-white px-7 py-3 rounded-lg font-medium transition inline-flex items-center justify-center gap-2"
            >
              Explore Services
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a
              href="/about"
              class="border border-slate-700 hover:border-slate-600 text-slate-300 hover:text-white px-7 py-3 rounded-lg font-medium transition inline-flex items-center justify-center gap-2"
            >
              Learn More About Me
            </a>
          </div>
        </div>

        <!-- Right: Profile Card -->
        <div class="flex justify-center">
          <div class="bg-slate-900 border border-slate-800 rounded-2xl p-8 max-w-sm w-full">
            <div class="text-center">
              <Image
                src={scottPhoto}
                alt="Scott Armbruster"
                width={160}
                height={160}
                class="w-36 h-36 mx-auto mb-6 rounded-full object-cover object-[30%_center]"
                format="webp"
                quality={80}
              />
              <div class="text-xl font-bold mb-1">Scott Armbruster</div>
              <div class="text-slate-400 text-sm mb-6">
                AI Strategy & Systems Partner
              </div>

              <!-- Social Links -->
              <div class="flex justify-center gap-3 mb-6">
                <a
                  href="https://youtube.com/@loganday"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-9 h-9 bg-slate-800 hover:bg-slate-700 rounded-lg flex items-center justify-center transition"
                  aria-label="YouTube"
                >
                  <svg class="w-4 h-4 text-slate-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </a>
                <a
                  href="https://www.linkedin.com/in/scottrarmbruster/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-9 h-9 bg-slate-800 hover:bg-slate-700 rounded-lg flex items-center justify-center transition"
                  aria-label="LinkedIn"
                >
                  <svg class="w-4 h-4 text-slate-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
                <a
                  href="/contact"
                  class="w-9 h-9 bg-slate-800 hover:bg-slate-700 rounded-lg flex items-center justify-center transition"
                  aria-label="Contact"
                >
                  <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </a>
              </div>

              <!-- Stats -->
              <div class="flex justify-center gap-8 text-sm border-t border-slate-800 pt-6">
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">23+</div>
                  <div class="text-slate-500 text-xs">Years in Tech</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">10+</div>
                  <div class="text-slate-500 text-xs">Years Consulting</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What I Do Section -->
  <section class="py-20 px-6 border-t border-slate-800/60">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">What I Do</h2>
        <p class="text-lg text-slate-400 max-w-2xl mx-auto">
          I bridge the gap between AI knowledge and AI implementation -- helping you move from
          curious to confident to capable.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- For Professionals -->
        <a
          href="/education"
          class="group bg-slate-900 border border-slate-800 rounded-xl p-8 hover:border-slate-700 transition"
        >
          <div class="flex items-center gap-4 mb-5">
            <div class="bg-blue-600/10 p-3 rounded-lg">
              <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
              </svg>
            </div>
            <div>
              <div class="text-xs text-slate-500 font-semibold tracking-wide uppercase">For Professionals</div>
              <h3 class="text-xl font-bold">AI Education</h3>
            </div>
          </div>
          <p class="text-slate-400 mb-5 leading-relaxed">
            Build AI-powered income streams and future-proof your career. From group coaching to
            1:1 strategy sessions, I help you master the tools and launch your AI side business.
          </p>
          <div class="text-blue-400 group-hover:text-blue-300 inline-flex items-center gap-2 text-sm font-medium">
            Learn more
            <svg class="w-4 h-4 group-hover:translate-x-0.5 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </div>
        </a>

        <!-- For Organizations -->
        <a
          href="/agency"
          class="group bg-slate-900 border border-slate-800 rounded-xl p-8 hover:border-slate-700 transition"
        >
          <div class="flex items-center gap-4 mb-5">
            <div class="bg-blue-600/10 p-3 rounded-lg">
              <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <div>
              <div class="text-xs text-slate-500 font-semibold tracking-wide uppercase">For Organizations</div>
              <h3 class="text-xl font-bold">AI Agency Services</h3>
            </div>
          </div>
          <p class="text-slate-400 mb-5 leading-relaxed">
            Deploy AI strategies and automation systems that transform your operations. Custom
            chatbots, workflow automation, and strategic advisory for mission-driven
            organizations.
          </p>
          <div class="text-blue-400 group-hover:text-blue-300 inline-flex items-center gap-2 text-sm font-medium">
            Learn more
            <svg class="w-4 h-4 group-hover:translate-x-0.5 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </div>
        </a>
      </div>

      <div class="mt-8 text-center">
        <a
          href="/services"
          class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-slate-300 transition"
        >
          View all services
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Work With Me -->
  <section class="py-20 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Why Work With Me</h2>
        <p class="text-lg text-slate-400">
          I've been on both sides -- and that makes all the difference.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-slate-900 border border-slate-800 rounded-xl p-7 hover:border-slate-700 transition">
          <svg class="w-8 h-8 text-blue-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <h3 class="text-lg font-bold mb-2">Real-World Experience</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            23+ years building enterprise systems and 10+ years consulting Fortune 500
            companies. I know what works in the real world -- not just in tutorials.
          </p>
        </div>

        <div class="bg-slate-900 border border-slate-800 rounded-xl p-7 hover:border-slate-700 transition">
          <svg class="w-8 h-8 text-blue-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
          <h3 class="text-lg font-bold mb-2">Practical Implementation</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            I don't just teach theory -- I help you implement. Whether you're building
            your first automation or deploying enterprise AI, we get it done together.
          </p>
        </div>

        <div class="bg-slate-900 border border-slate-800 rounded-xl p-7 hover:border-slate-700 transition">
          <svg class="w-8 h-8 text-blue-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <h3 class="text-lg font-bold mb-2">Results-Focused</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            No fluff, no hype. I measure success by your outcomes -- did you launch? Did you save
            time? Did you generate revenue? That's what matters.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Content / Blog Preview -->
  <section class="py-20 px-6 border-t border-slate-800/60">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-center mb-12">
        <div>
          <h2 class="text-3xl font-bold mb-2">Latest Insights</h2>
          <p class="text-slate-400">Practical AI strategies you can use today</p>
        </div>
        <a
          href="/blog"
          class="mt-4 md:mt-0 text-blue-400 hover:text-blue-300 inline-flex items-center gap-2 text-sm font-medium"
        >
          View all posts
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {latestPosts.map((post) => (
          <a href={`/blog/${post.slug}/`} class="bg-slate-900 border border-slate-800 rounded-xl overflow-hidden hover:border-slate-700 transition group">
            {post.data.heroImage ? (
              <div class="h-40 overflow-hidden">
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition duration-300 will-change-transform"
                  width="400"
                  height="225"
                  loading="lazy"
                  decoding="async"
                />
              </div>
            ) : (
              <div class="h-40 bg-slate-800"></div>
            )}
            <div class="p-5">
              <div class="text-xs text-blue-400 font-medium mb-2">{post.data.category}</div>
              <h3 class="text-base font-bold mb-2 group-hover:text-blue-400 transition line-clamp-2">
                {post.data.title}
              </h3>
              <p class="text-slate-500 text-sm line-clamp-2">
                {post.data.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-6 border-t border-slate-800/60">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-5">Ready to Get Started?</h2>
      <p class="text-lg text-slate-400 mb-10">
        Whether you're looking to learn AI skills or implement AI systems -- I'm here to
        help you cross the bridge.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/services"
          class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-7 py-3 rounded-lg font-medium transition"
        >
          Explore Services
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-2 border border-slate-700 hover:border-slate-600 text-slate-300 hover:text-white px-7 py-3 rounded-lg font-medium transition"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</Layout>
