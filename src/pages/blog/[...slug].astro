---
import Layout from '../../layouts/Layout.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { getCollection } from 'astro:content';
import { SITE_AUTHOR, getCategoryConfig, getCategoryPath, getReadingTime, RELATED_POSTS_COUNT } from '../../consts';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts
    .filter((post) => !post.data.draft)
    .map((post) => ({
      params: { slug: post.slug },
      props: post,
    }));
}

const post = Astro.props;
const { Content } = await post.render();

const allPosts = (await getCollection('blog'))
  .filter(p => !p.data.draft && p.slug !== post.slug)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const sameCategoryPosts = allPosts.filter(p => p.data.category === post.data.category);
const relatedPosts = sameCategoryPosts.length >= RELATED_POSTS_COUNT
  ? sameCategoryPosts.slice(0, RELATED_POSTS_COUNT)
  : [...sameCategoryPosts, ...allPosts.filter(p => p.data.category !== post.data.category)].slice(0, RELATED_POSTS_COUNT);

const readingTime = getReadingTime(post.body || '');
const catConfig = getCategoryConfig(post.data.category);
const canonicalUrl = new URL(`${getCategoryPath(post.data.category)}${post.slug}/`, Astro.site).toString();
const postUrl = canonicalUrl;
const encodedTitle = encodeURIComponent(post.data.title);
const encodedUrl = encodeURIComponent(postUrl);

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "description": post.data.description,
  "datePublished": post.data.pubDate.toISOString(),
  "dateModified": (post.data.updatedDate || post.data.pubDate).toISOString(),
  "author": { "@type": "Person", "name": post.data.author || SITE_AUTHOR, "url": "https://armbruster-brand-astro.pages.dev/about" },
  "publisher": { "@type": "Organization", "name": SITE_AUTHOR, "url": "https://armbruster-brand-astro.pages.dev" },
  "image": post.data.heroImage ? new URL(post.data.heroImage, Astro.site).toString() : undefined,
  "mainEntityOfPage": { "@type": "WebPage", "@id": canonicalUrl },
  "keywords": post.data.tags?.join(', '),
};
---

<Layout
  title={`${post.data.seoTitle || post.data.title} | ${SITE_AUTHOR}`}
  description={post.data.seoDescription || post.data.description}
  image={post.data.heroImage}
  article={{
    publishedTime: post.data.pubDate.toISOString(),
    modifiedTime: post.data.updatedDate?.toISOString(),
    author: post.data.author || SITE_AUTHOR,
    tags: post.data.tags,
  }}
>
  <Fragment slot="head">
    <link rel="canonical" href={canonicalUrl} />
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>

  <!-- Reading Progress Bar -->
  <div class="fixed top-[65px] left-0 w-0 h-[3px] bg-gradient-to-r from-blue-500 to-purple-500 z-50 transition-[width] duration-100" id="readingProgress"></div>

  <!-- Back Button -->
  <div class="pt-24 pb-8 px-6">
    <div class="max-w-4xl mx-auto">
      <a href={catConfig.path} class="inline-flex items-center gap-2 text-blue-400 hover:text-white transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to {catConfig.name}
      </a>
    </div>
  </div>

  <article class="pb-20 px-6" id="article">
    <div class="max-w-4xl mx-auto">
      <div class="mb-6">
        <a href={catConfig.path} class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600/10 border border-slate-800 rounded-lg text-blue-400 text-sm font-semibold hover:border-blue-500 transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
          {post.data.category}
        </a>
      </div>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">{post.data.title}</h1>
      <p class="text-xl text-slate-300 mb-8 leading-relaxed">{post.data.description}</p>

      <div class="flex flex-wrap items-center gap-6 text-slate-400 mb-8 pb-8 border-b border-slate-800">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span>{post.data.author || SITE_AUTHOR}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <FormattedDate date={post.data.pubDate} />
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>{readingTime} min read</span>
        </div>
      </div>

      {post.data.heroImage && (
        <div class="mb-12 rounded-xl overflow-hidden border border-slate-800">
          <img src={post.data.heroImage} alt={post.data.title} class="w-full h-auto" width="1200" height="630" loading="eager" decoding="async" fetchpriority="high" />
        </div>
      )}

      <div class="prose-blog">
        <Content />
      </div>

      {post.data.tags && post.data.tags.length > 0 && (
        <div class="mt-16 pt-8 border-t border-slate-800">
          <h3 class="text-sm font-semibold text-slate-400 mb-4">TAGS</h3>
          <div class="flex flex-wrap gap-3">
            {post.data.tags.map((tag: string) => (
              <span class="px-4 py-2 bg-slate-900 border border-slate-800 rounded-lg text-sm text-slate-300 hover:border-slate-700 transition">{tag}</span>
            ))}
          </div>
        </div>
      )}

      <div class="mt-12 pt-8 border-t border-slate-800">
        <h3 class="text-sm font-semibold text-slate-400 mb-4">SHARE THIS ARTICLE</h3>
        <div class="flex flex-wrap gap-3">
          <a href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 bg-slate-900 border border-slate-800 rounded-lg text-sm text-slate-300 hover:border-slate-700 hover:text-white transition">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            Twitter
          </a>
          <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 bg-slate-900 border border-slate-800 rounded-lg text-sm text-slate-300 hover:border-slate-700 hover:text-white transition">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            LinkedIn
          </a>
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 bg-slate-900 border border-slate-800 rounded-lg text-sm text-slate-300 hover:border-slate-700 hover:text-white transition">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            Facebook
          </a>
          <button onclick="navigator.clipboard.writeText(window.location.href).then(() => this.textContent = 'Copied!')" class="inline-flex items-center gap-2 px-5 py-2.5 bg-slate-900 border border-slate-800 rounded-lg text-sm text-slate-300 hover:border-slate-700 hover:text-white transition cursor-pointer">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
            Copy Link
          </button>
        </div>
      </div>

      <div class="mt-16 bg-slate-900 border border-slate-800 rounded-2xl p-8 md:p-12 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Take Action?</h2>
        <p class="text-xl text-slate-300 mb-8 max-w-2xl mx-auto">Whether you're building AI skills or deploying AI systems, let's start your transformation today.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/services" class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-lg font-semibold transition">Explore Services</a>
          <a href="/resources" class="inline-flex items-center justify-center gap-2 bg-slate-800 hover:bg-slate-700 px-8 py-4 rounded-lg font-semibold transition">Get Free Resources</a>
        </div>
      </div>

      {relatedPosts.length > 0 && (
        <div class="mt-16 pt-8 border-t border-slate-800">
          <h2 class="text-2xl font-bold mb-8">Related Articles</h2>
          <div class="grid md:grid-cols-3 gap-6">
            {relatedPosts.map((related) => (
              <a href={`${getCategoryPath(related.data.category)}${related.slug}`} class="group bg-slate-900 border border-slate-800 rounded-xl overflow-hidden hover:border-slate-700 transition">
                {related.data.heroImage && (
                  <div class="aspect-video overflow-hidden">
                    <img src={related.data.heroImage} alt={related.data.title} class="w-full h-full object-cover group-hover:scale-105 transition duration-300 will-change-transform" width="400" height="225" loading="lazy" decoding="async" />
                  </div>
                )}
                <div class="p-5">
                  <span class="text-xs text-blue-400 font-semibold">{related.data.category}</span>
                  <h3 class="text-lg font-bold mt-1 mb-2 group-hover:text-blue-400 transition line-clamp-2">{related.data.title}</h3>
                  <p class="text-sm text-slate-400 line-clamp-2">{related.data.description}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </article>

  <script>
    const progressBar = document.getElementById('readingProgress');
    const article = document.getElementById('article');
    if (progressBar && article) {
      window.addEventListener('scroll', () => {
        const articleTop = article.offsetTop;
        const articleHeight = article.offsetHeight;
        const windowHeight = window.innerHeight;
        const scrollTop = window.scrollY;
        const start = articleTop - windowHeight / 2;
        const end = articleTop + articleHeight - windowHeight;
        const progress = Math.min(Math.max((scrollTop - start) / (end - start), 0), 1);
        progressBar.style.width = `${progress * 100}%`;
      });
    }
  </script>
</Layout>
