---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import Pagination from '../../components/Pagination.astro';
import { getCollection } from 'astro:content';
import { CATEGORIES, getCategoryPath, getReadingTime, POSTS_PER_PAGE, getCategoryKeys } from '../../consts';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPost = posts.find(post => post.data.featured);
const categoryKeys = getCategoryKeys();

const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);
const paginatedPosts = posts.slice(0, POSTS_PER_PAGE);
---

<Layout title="Blog - AI Implementation Insights | Scott Armbruster" description="Practical guides, case studies, and strategies for building AI-powered businesses and implementing AI systems that actually work.">
  <!-- Hero Section -->
  <section class="pt-32 pb-12 px-6">
    <div class="max-w-6xl mx-auto text-center">
      <p class="text-blue-400 text-sm font-semibold tracking-wide uppercase mb-6">
        AI Insights & Strategy
      </p>
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        The{' '}
        <span class="text-white">
          AI Implementation
        </span>{' '}
        Blog
      </h1>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        Practical guides, case studies, and strategies for building AI-powered businesses and
        implementing AI systems that actually work.
      </p>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="px-6 pb-8">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-wrap gap-3 justify-center" id="category-filter">
        <button
          class="category-btn px-4 py-2 rounded-full text-sm font-semibold transition border bg-blue-600 border-blue-600 text-white"
          data-category="All"
        >
          All
        </button>
        {categoryKeys.map((cat) => (
          <a
            href={CATEGORIES[cat].path}
            class="category-btn px-4 py-2 rounded-full text-sm font-semibold transition border bg-slate-900 border-slate-800 text-slate-400 hover:border-blue-500 hover:text-white"
            data-category={cat}
          >
            {CATEGORIES[cat].icon} {cat}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <section class="py-12 px-6">
      <div class="max-w-6xl mx-auto">
        <a href={`${getCategoryPath(featuredPost.data.category)}${featuredPost.slug}`} class="block bg-slate-900 border border-slate-800 rounded-2xl p-8 md:p-12 hover:border-slate-700 transition">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <p class="text-blue-400 text-xs font-semibold tracking-wide uppercase mb-4">
                FEATURED
              </p>
              <h2 class="text-3xl font-bold mb-4 leading-tight">{featuredPost.data.title}</h2>
              <p class="text-slate-300 mb-6 text-lg">{featuredPost.data.description}</p>
              <div class="flex items-center gap-6 text-sm text-slate-400 mb-6">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <span>{featuredPost.data.pubDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>{getReadingTime(featuredPost.body || '')} min read</span>
                </div>
              </div>
              <span class="inline-flex items-center gap-2 text-blue-400 font-semibold">
                Read Article
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </span>
            </div>
            {featuredPost.data.heroImage && (
              <div class="rounded-xl overflow-hidden border border-slate-800">
                <img
                  src={featuredPost.data.heroImage}
                  alt={featuredPost.data.title}
                  class="w-full h-auto"
                  loading="eager"
                />
              </div>
            )}
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- Blog Posts Grid -->
  <section class="py-12 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">Latest Articles</h2>
        <span class="text-slate-400 text-sm">
          {posts.length} {posts.length === 1 ? 'article' : 'articles'}
        </span>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {paginatedPosts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-slate-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          <h3 class="text-xl font-bold text-slate-400 mb-2">No articles yet</h3>
          <p class="text-slate-500">Check back soon for new content!</p>
        </div>
      )}

      <Pagination currentPage={1} totalPages={totalPages} baseUrl="/blog/" />
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="py-20 px-6 border-t border-slate-800/60">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">Never Miss an Article</h2>
      <p class="text-xl text-slate-300 mb-8">
        Get weekly insights on AI strategy, automation, and building AI-powered businesses
        delivered to your inbox.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
        <input
          type="email"
          placeholder="Enter your email address"
          class="flex-1 px-6 py-4 rounded-lg bg-slate-900 border border-slate-700 focus:border-blue-500 focus:outline-none"
        />
        <button class="bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-lg font-semibold transition whitespace-nowrap">
          Subscribe
        </button>
      </div>
      <p class="text-sm text-slate-500 mt-4">No spam. Unsubscribe anytime.</p>
    </div>
  </section>
</Layout>
