---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPost = posts.find(post => post.data.featured);
const categories = ['All', ...new Set(posts.map(post => post.data.category))];

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    month: 'long',
    day: 'numeric',
    year: 'numeric',
  });
}

function getReadingTime(body: string) {
  const wordsPerMinute = 200;
  const wordCount = body.split(/\s+/).length;
  const minutes = Math.ceil(wordCount / wordsPerMinute);
  return `${minutes} min read`;
}
---

<Layout title="Blog - AI Implementation Insights | Scott Armbruster" description="Practical guides, case studies, and strategies for building AI-powered businesses and implementing AI systems that actually work.">
  <!-- Hero Section -->
  <section class="pt-32 pb-12 px-6">
    <div class="max-w-6xl mx-auto text-center">
      <div class="inline-block px-4 py-2 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-cyan-400 text-sm mb-6">
        AI Insights & Strategy
      </div>
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        The{' '}
        <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
          AI Implementation
        </span>{' '}
        Blog
      </h1>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        Practical guides, case studies, and strategies for building AI-powered businesses and
        implementing AI systems that actually work.
      </p>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="px-6 pb-8">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-wrap gap-3 justify-center" id="category-filter">
        {categories.map((cat) => (
          <button
            class="category-btn px-4 py-2 rounded-full text-sm font-semibold transition border"
            data-category={cat}
          >
            {cat}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <section class="py-12 px-6" data-category={featuredPost.data.category}>
      <div class="max-w-6xl mx-auto">
        <a href={`/blog/${featuredPost.slug}`} class="block bg-gradient-to-br from-cyan-900/20 to-blue-900/20 border border-cyan-500/30 rounded-2xl p-8 md:p-12 hover:shadow-xl hover:shadow-cyan-500/20 transition">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <div class="inline-block px-3 py-1 bg-cyan-500/20 border border-cyan-500/40 rounded-full text-cyan-400 text-xs font-semibold mb-4">
                FEATURED
              </div>
              <h2 class="text-3xl font-bold mb-4 leading-tight">{featuredPost.data.title}</h2>
              <p class="text-slate-300 mb-6 text-lg">{featuredPost.data.description}</p>
              <div class="flex items-center gap-6 text-sm text-slate-400 mb-6">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <span>{formatDate(featuredPost.data.pubDate)}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>{getReadingTime(featuredPost.body || '')}</span>
                </div>
              </div>
              <span class="inline-flex items-center gap-2 text-cyan-400 font-semibold">
                Read Article
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </span>
            </div>
            {featuredPost.data.heroImage && (
              <div class="rounded-xl overflow-hidden border border-cyan-500/20">
                <img
                  src={featuredPost.data.heroImage}
                  alt={featuredPost.data.title}
                  class="w-full h-auto"
                  loading="eager"
                />
              </div>
            )}
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- Blog Posts Grid -->
  <section class="py-12 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">Latest Articles</h2>
        <span class="text-slate-400 text-sm" id="post-count">
          {posts.length} {posts.length === 1 ? 'article' : 'articles'}
        </span>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="posts-grid">
        {posts.map((post) => (
          <article class="post-card bg-slate-900 border border-slate-800 rounded-xl overflow-hidden hover:border-cyan-500/50 transition group" data-category={post.data.category}>
            {post.data.heroImage ? (
              <div class="aspect-video overflow-hidden">
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                  loading="lazy"
                />
              </div>
            ) : (
              <div class="aspect-video bg-gradient-to-br from-cyan-500/10 to-blue-600/10 flex items-center justify-center">
                <svg class="w-12 h-12 text-cyan-400 group-hover:scale-110 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
            )}

            <div class="p-6">
              <div class="flex items-center gap-2 mb-3">
                <span class="inline-block px-3 py-1 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-cyan-400 text-xs font-semibold">
                  {post.data.category}
                </span>
              </div>

              <h3 class="text-xl font-bold mb-3 group-hover:text-cyan-400 transition line-clamp-2">
                {post.data.title}
              </h3>

              <p class="text-slate-400 text-sm mb-4 line-clamp-2">{post.data.description}</p>

              <div class="flex items-center justify-between text-xs text-slate-500 mb-4">
                <div class="flex items-center gap-4">
                  <div class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <span>
                      {post.data.pubDate.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                      })}
                    </span>
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>{getReadingTime(post.body || '')}</span>
                  </div>
                </div>
              </div>

              <a
                href={`/blog/${post.slug}`}
                class="text-cyan-400 hover:text-cyan-300 font-semibold text-sm inline-flex items-center gap-2 group-hover:gap-3 transition-all"
              >
                Read More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-slate-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          <h3 class="text-xl font-bold text-slate-400 mb-2">No articles yet</h3>
          <p class="text-slate-500">Check back soon for new content!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="py-20 px-6 bg-gradient-to-br from-cyan-900/20 to-blue-900/20 border-y border-cyan-500/20">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">Never Miss an Article</h2>
      <p class="text-xl text-slate-300 mb-8">
        Get weekly insights on AI strategy, automation, and building AI-powered businesses
        delivered to your inbox.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
        <input
          type="email"
          placeholder="Enter your email address"
          class="flex-1 px-6 py-4 rounded-full bg-slate-900 border border-slate-700 focus:border-cyan-500 focus:outline-none"
        />
        <button class="bg-gradient-to-r from-cyan-500 to-blue-600 px-8 py-4 rounded-full font-semibold hover:shadow-lg hover:shadow-cyan-500/50 transition whitespace-nowrap">
          Subscribe
        </button>
      </div>
      <p class="text-sm text-slate-500 mt-4">No spam. Unsubscribe anytime.</p>
    </div>
  </section>
</Layout>

<script>
  // Category filter functionality
  const buttons = document.querySelectorAll('.category-btn');
  const cards = document.querySelectorAll('.post-card');
  const countEl = document.getElementById('post-count');
  let activeCategory = 'All';

  function updateFilter(category: string) {
    activeCategory = category;

    buttons.forEach(btn => {
      const cat = btn.getAttribute('data-category');
      if (cat === category) {
        btn.classList.add('bg-cyan-500/20', 'border-cyan-500/50', 'text-cyan-400');
        btn.classList.remove('bg-slate-900', 'border-slate-800', 'text-slate-400');
      } else {
        btn.classList.remove('bg-cyan-500/20', 'border-cyan-500/50', 'text-cyan-400');
        btn.classList.add('bg-slate-900', 'border-slate-800', 'text-slate-400');
      }
    });

    let visible = 0;
    cards.forEach(card => {
      const cardCat = card.getAttribute('data-category');
      if (category === 'All' || cardCat === category) {
        (card as HTMLElement).style.display = '';
        visible++;
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });

    if (countEl) {
      countEl.textContent = `${visible} ${visible === 1 ? 'article' : 'articles'}`;
    }
  }

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const cat = btn.getAttribute('data-category');
      if (cat) updateFilter(cat);
    });
  });

  // Initialize with "All" selected
  updateFilter('All');
</script>
