  <!-- CTA Section -->
  <section class="py-20 px-6 border-t border-slate-800/60">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-6">Not Sure Which Path Is Right?</h2>
      <p class="text-xl text-slate-300 mb-8">
        Book a free 30-minute strategy call. We'll discuss your goals, expertise, and the
        best path to launch your AI income stream.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-lg text-lg font-semibold transition"
      >
        Book Free Strategy Call
      </a>
    </div>
  </section>
