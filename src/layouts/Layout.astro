---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ResourceGate from '../components/ResourceGate.astro';
import { SOCIAL_TWITTER, SITE_URL, SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: {
    publishedTime: string;
    modifiedTime?: string;
    author: string;
    tags?: string[];
  };
}

const {
  title,
  description = "AI Strategy & Systems at Every Level. Whether you're an individual building AI skills or an organization deploying AI systems.",
  image = "/images/og-default.png",
  article,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL(image, Astro.site);
const pathname = Astro.url.pathname;
const isResourceSubpage = /^\/resources\/.+/.test(pathname);
const isDemoSubpage = /^\/demos\/.+/.test(pathname);
const isCalculatorSubpage = /^\/calculators\/.+/.test(pathname);
const isGatedPath = isResourceSubpage || isDemoSubpage || isCalculatorSubpage;
const gatedMainClass = isGatedPath
  ? `gated-main${isCalculatorSubpage ? ' gated-main--calculator' : ''}`
  : undefined;

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": SITE_TITLE,
  "url": SITE_URL,
  "description": "AI Strategy & Systems at Every Level. Practical guides, case studies, and strategies for building AI-powered businesses.",
  "publisher": {
    "@type": "Person",
    "name": "Scott Armbruster"
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Scott Armbruster" />
    <meta name="impact-site-verification" value="08265180-ec2c-4674-abd7-06b7c21287af" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" type="application/rss+xml" title="Scott Armbruster Blog" href="/rss.xml" />
    <link rel="dns-prefetch" href="https://formspree.io" />
    {isGatedPath && (
      <>
        <link rel="dns-prefetch" href="https://assets.mailerlite.com" />
        <link rel="dns-prefetch" href="https://static.mailerlite.com" />
        <link rel="preconnect" href="https://assets.mailerlite.com" crossorigin />
        <link rel="preconnect" href="https://static.mailerlite.com" crossorigin />
        <link rel="preload" href="https://assets.mailerlite.com/js/universal.js" as="script" crossorigin />
      </>
    )}

    <!-- WebSite Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:site_name" content="Scott Armbruster" />

    {article && (
      <>
        <meta property="article:published_time" content={article.publishedTime} />
        {article.modifiedTime && <meta property="article:modified_time" content={article.modifiedTime} />}
        <meta property="article:author" content={article.author} />
        {article.tags?.map(tag => <meta property="article:tag" content={tag} />)}
      </>
    )}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    {SOCIAL_TWITTER && <meta name="twitter:creator" content={SOCIAL_TWITTER} />}
    {SOCIAL_TWITTER && <meta name="twitter:site" content={SOCIAL_TWITTER} />}

    <title>{title}</title>

    {isGatedPath && (
      <script>
        (function(w,d,e,u,f,l,n){w[f]=w[f]||function(){(w[f].q=w[f].q||[])
        .push(arguments);},l=d.createElement(e),l.async=1,l.src=u,
        n=d.getElementsByTagName(e)[0],n.parentNode.insertBefore(l,n);})
        (window,document,'script','https://assets.mailerlite.com/js/universal.js','ml');
        ml('account', '2101328');
      </script>
    )}

    <slot name="head" />
  </head>
  <body class="antialiased min-h-screen bg-slate-950 text-white">
    <Navigation />
    <main class={gatedMainClass}>
      <slot />
    </main>
    <Footer />
    {isGatedPath && <ResourceGate />}
  </body>
</html>
